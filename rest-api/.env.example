# ============================================
# SHAREIDE - Complete Environment Configuration
# ============================================
# Replace all "your_xxx" values with actual credentials

# Application Settings
APP_NAME=SHAREIDE
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.shareide.com
FRONTEND_URL=https://shareide.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ============================================
# DATABASE (MySQL for Production)
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=shareide
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# ============================================
# SESSION & CACHE
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
CACHE_STORE=database
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

# ============================================
# PUSHER - Realtime Communication
# Get from: https://dashboard.pusher.com
# ============================================
BROADCAST_CONNECTION=pusher
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_APP_CLUSTER=ap2

# Frontend Pusher (for admin panel)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# TWILIO - WhatsApp OTP
# Get from: https://console.twilio.com
# ============================================
TWILIO_SID=your_twilio_account_sid
TWILIO_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ============================================
# GOOGLE MAPS API
# Get from: https://console.cloud.google.com
# Enable: Maps SDK, Places API, Directions API, Geocoding API
# ============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# BANK ALFALAH PAYMENT GATEWAY
# Get from: Bank Alfalah Merchant Portal
# ============================================
ALFALAH_MERCHANT_ID=your_merchant_id
ALFALAH_MERCHANT_PASSWORD=your_merchant_password
ALFALAH_MERCHANT_USERNAME=your_merchant_username
ALFALAH_RETURN_URL=https://api.shareide.com/api/payment/callback
ALFALAH_MODE=production

# ============================================
# FIREBASE (Push Notifications)
# Get from: https://console.firebase.google.com
# Download service account JSON and save to storage/app/
# ============================================
FIREBASE_CREDENTIALS_PATH=storage/app/firebase-credentials.json
FIREBASE_PROJECT_ID=your_firebase_project_id

# ============================================
# MAIL CONFIGURATION
# For Gmail: Enable 2FA and create App Password
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@shareide.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS S3 (Optional - for file storage)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-south-1
AWS_BUCKET=shareide-uploads
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# REDIS (Optional - for better caching)
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# ADMIN SETTINGS
# ============================================
ADMIN_EMAIL=admin@shareide.com
DEFAULT_COMMISSION_RATE=15
DEFAULT_CURRENCY=PKR
DEFAULT_TIMEZONE=Asia/Karachi

# ============================================
# RIDE SETTINGS
# ============================================
RIDE_SEARCH_RADIUS_KM=10
MAX_RIDE_CANCELLATION_TIME_MINUTES=5
DRIVER_ARRIVAL_TIMEOUT_MINUTES=15
RIDE_AUTO_CANCEL_TIMEOUT_MINUTES=10

# ============================================
# BIDDING SETTINGS
# ============================================
BIDDING_ENABLED=true
MIN_BID_PERCENTAGE=10
MAX_BID_PERCENTAGE=50
BID_RADIUS_BONUS_PER_10_PERCENT=2

# ============================================
# SECURITY
# ============================================
SANCTUM_STATEFUL_DOMAINS=shareide.com,admin.shareide.com
